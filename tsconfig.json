{
  "compilerOptions": {
    "jsx": "react", 
    "moduleResolution": "node",
    "target": "es5",
    "esModuleInterop": true,
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "part:@sanity/components/loading/spinner": ["./node_modules/@sanity/components/lib/loading/Spinner.js"],
      "part:@sanity/components/buttons/default": ["./node_modules/@sanity/components/lib/buttons/Default.js"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
